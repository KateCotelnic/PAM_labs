<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <EditText
        android:id="@+id/name_of_dish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of the dish"
        android:textColor="@color/bridal_white"
        android:fontFamily="@font/delius"
        android:textFontWeight="@font/delius"/>

    <EditText
        android:id="@+id/insert_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingredients"
        android:textColor="@color/bridal_white"
        android:fontFamily="@font/delius"
        android:textFontWeight="@font/delius"/>

    <EditText
        android:id="@+id/preparation_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bridal_white"
        android:fontFamily="@font/delius"
        android:textFontWeight="@font/delius"
        android:hint="Preparation description" />

</LinearLayout>